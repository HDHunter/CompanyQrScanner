<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="2dp"
    android:paddingRight="8dp"
    android:paddingBottom="2dp">

    <TextView
        android:id="@+id/item_appname"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000"
        android:textSize="11sp"
        tools:text="appName ：可下载数量:12个" />

    <TextView
        android:id="@+id/item_packagename"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#303030"
        android:textSize="10sp"
        tools:text="com.yodo1.women" />

    <TextView
        android:id="@+id/item_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#303030"
        android:textSize="10sp"
        tools:text="总下载数量12，今日下载1。" />

    <TextView
        android:id="@+id/item_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        tools:text="当前版本：12500" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_itemapp_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:background="@drawable/selectdown"
            android:fontFamily="sans-serif-condensed"
            android:padding="4dp"
            android:text="分享"
            android:textSize="10sp" />

        <com.hunter.appinfomonitor.yodo1page.DownloadButton
            android:id="@+id/item_download_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>