<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="30dp"
    android:paddingTop="4dp"
    android:paddingRight="8dp"
    android:paddingBottom="4dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            tools:text="appName ：可下载数量:12个" />

        <TextView
            android:id="@+id/item_packagename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="com.yodo1.women" />

        <TextView
            android:id="@+id/item_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#303030"
            android:textSize="14sp"
            tools:text="总下载数量12，今日下载1。" />

        <TextView
            android:id="@+id/item_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="当前版本：12500" />
    </LinearLayout>

    <Button
        android:id="@+id/item_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载" />
</LinearLayout>